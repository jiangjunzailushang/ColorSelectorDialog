<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="windowActionBar">false</item>-->
        <!--<item name="windowNoTitle">true</item>-->
        <!--<item name="windowActionModeOverlay">true</item>-->
        <!--<item name="android:datePickerStyle">@android:style/Widget.DatePicker</item>-->
        <!--<item name="colorControlNormal">@color/c4</item>-->
    </style>

    <style name="defaultAlertDialogLightStyle" parent="AlertDialogFixTheme.Light">
        <item name="colorAccent">@color/c1</item>
        <item name="TextColor">@color/c3</item>
    </style>

    <style name="AlertDialogFixTheme.Light" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">?attr/colorAccent</item>
        <item name="dialogTheme">@style/PreferenceFixTheme.Light.Dialog</item>
        <item name="alertDialogTheme">@style/PreferenceFixTheme.Light.Dialog.Alert</item>
        <!-- Overriding the category views as they don't look good -->
    </style>

    <style name="PreferenceFixTheme.Light.Dialog.Alert" parent="@style/Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">?attr/colorAccent</item>
    </style>
    <style name="PreferenceFixTheme.Light.Dialog" parent="@style/Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">?attr/colorAccent</item>
    </style>



</resources>
